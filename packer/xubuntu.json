{
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "linux",
        " auto",
        " console-setup/ask_detect=false",
        " console-setup/layoutcode=de",
        " console-setup/modelcode=pc105",
        " debconf/frontend=noninteractive",
        " debian-installer=en_US.UTF-8",
        " fb=false",
        " initrd=/initrd.gz",
        " keymap=de debian-installer/keymap=de",
        " kbd-chooser/method=de",
        " keyboard-configuration/layout=Germany",
        " keyboard-configuration/variant=Germany",
        " locale=en_US.UTF-8",
        " netcfg/get_domain=vm",
        " netcfg/get_hostname=vagrant",
        " grub-installer/bootdev=/dev/sda",
        " noapic",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed/default.cfg<wait>",
        " -- <enter><wait>"
      ],
      "boot_wait": "20s",
      "guest_additions_mode": "disable",
      "guest_os_type": "Ubuntu_64",
      "headless": "true",
      "http_directory": ".",
      "iso_checksum": "md5:{{user `vm_iso_checksum_md5`}}",
      "iso_url": "{{user `vm_iso`}}",
      "keep_registered": "false",
      "shutdown_command": "sudo -S shutdown -P now",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_timeout": "30m",
      "ssh_username": "{{user `ssh_username`}}",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `vm_ram`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--vram",
          "{{user `vm_vram`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `vm_cpus`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--ioapic",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--hwvirtex",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--clipboard",
          "bidirectional"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--draganddrop",
          "bidirectional"
        ],
        [
          "sharedfolder",
          "add",
          "{{.Name}}",
          "--name",
          "{{user `vm_shared_folder_name`}}",
          "--hostpath",
          "{{user `vm_shared_host_folder`}}",
          "--automount"
        ]
      ]
    }
  ],
  "post-processors": [
    [
      "vagrant",
      {
        "access_token": "{{user `cloud_token`}}",
        "box_tag": "frostcode/devbox",
        "type": "vagrant-cloud",
        "version": "{{user `version`}}"
      }
    ]
  ],
  "provisioners": [
    {
      "execute_command": "echo '{{user `ssh_password`}}' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "inline": [
        "echo '%sudo ALL=(ALL) NOPASSWD:ALL' >> /etc/sudoers"
      ],
      "type": "shell"
    },
    {
      "extra_arguments": [
        "--extra-vars",
        "user={{user `ssh_username`}} git_email={{user `git_email`}}"
      ],
      "playbook_file": "./ansible/playbook-vm.yml",
      "type": "ansible"
    }
  ],
  "variables": {
    "cloud_token": "{{ env `VAGRANT_CLOUD_TOKEN` }}",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "version": "1.{{ env `GITHUB_RUN_NUMBER` }}",
    "vm_cpus": "1",
    "vm_ram": "8192",
    "vm_shared_folder_name": "shared-workspace",
    "vm_shared_host_folder": "{{ pwd }}/shared-workspace",
    "vm_vram": "128"
  }
}
